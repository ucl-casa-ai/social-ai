<%- include('partials/header', { title: 'CASA Staff List', page: 'staff' }) %>
  <div class="container-fluid py-4 flex-grow-1">
    <header class="text-center mb-4">
      <h1>CASA Staff List</h1>
      <p class="lead">A selection of staff from the UCL Centre for Advanced Spatial Analysis.</p>
    </header>

    <main>
      <div class="row">
        <% staff.forEach(member => { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= member.name %></h5>
                <p class="card-text text-muted flex-grow-1"><%= member.title %></p>
                <a href="/profile/<%= member.profileId %>" class="btn btn-sm btn-outline-primary mt-3">View Profile &rarr;</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </main>
  </div>
<%- include('partials/footer') %>