<%- include('partials/header', { title: 'AI Playground', page: 'playground' }) %>
  <div class="container-fluid py-4 flex-grow-1">
    <header class="text-center mb-4">
      <h1>AI Playground</h1>
      <p class="lead">Send a direct prompt to the AI model and see what it comes up with.</p>
    </header>

    <main>
      <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
          <form id="playground-form">
            <div class="mb-3">
              <label for="prompt-input" class="form-label">Your Prompt</label>
              <textarea class="form-control" id="prompt-input" rows="5" placeholder="e.g., Write a some information about you're recent publication or grant." required></textarea>
            </div>
            <div class="btn-toolbar" role="toolbar">
              <!-- <button type="submit" class="btn btn-primary me-2">Send to AI</button> -->
              <button type="button" id="linkedin-btn" class="btn btn-outline-primary me-2"><i class="bi bi-linkedin"></i> Create LinkedIn Post</button>
              <button type="button" id="bluesky-btn" class="btn btn-outline-info me-2"><i class="bi bi-cloud"></i> Create BlueSky Post</button>
              <button type="button" id="blog-btn" class="btn btn-outline-secondary"><i class="bi bi-file-post"></i> Create Blog Post</button>
            </div>
          </form>
        </div>
      </div>

      <div class="row justify-content-center mt-4">
        <div class="col-md-10 col-lg-8">
          <div id="playground-results-container" class="d-none">
            <h5>AI Response:</h5>
            <div id="playground-results" class="card card-body bg-light border rounded">
              <!-- AI response will be injected here -->
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
<%- include('partials/footer') %>