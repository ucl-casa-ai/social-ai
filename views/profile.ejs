<%- include('partials/header', { title: 'Social AI', page: 'profile' }) %>
  <div class="container-fluid py-4 flex-grow-1">
    <header class="text-center mb-4">
      <h1 id="profile-name-header"></h1>
      <p class="lead">Displaying profile data from UCL Profiles.</p>
    </header>

    <main data-max-records="<%= maxRecords %>">
      <div id="message-area" class="mt-4"></div>

      <div id="view-controls" class="text-end mb-2 d-none">
        <a href="#" id="expand-all-btn" class="btn btn-sm btn-outline-secondary me-2">
          <i class="bi bi-arrows-expand"></i> Expand All
        </a>
        <a href="#" id="collapse-all-btn" class="btn btn-sm btn-outline-secondary">
          <i class="bi bi-arrows-collapse"></i> Collapse All
        </a>
      </div>

      <div id="summary-container" class="mt-4 d-none">
      </div>

      <div id="publications-container" class="mt-4 d-none">
      </div>

      <div id="grants-container" class="mt-4 d-none">
      </div>

      <div id="results-container" class="mt-4 d-none">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center" id="results-header" style="cursor: pointer;">
            <h5 class="mb-0">Profile JSON Object</h5>
          <i class="bi bi-chevron-down" id="toggle-icon"></i>
          </div>
          <div id="results-body" class="card-body p-0">
             <pre id="results-area" class="json-colorizer m-0"></pre>
          </div>
        </div>
      </div>
    </main>
  </div>
<%- include('partials/footer') %>