<%- include('partials/header', { title: 'UCL Profile Fetcher', page: 'search' }) %>
  <div class="container-fluid py-4 flex-grow-1">
    <header class="text-center mb-4">
      <h1>Search UCL Profiles</h1>
      <p class="lead">Enter a UCL Profiles user ID to fetch their public data.</p>
      <p class="text-muted">Examples: <strong><a href="/profile/4441">4441</a></strong> (Steven Gray), <strong><a href="/profile/57564">57564</a></strong> (Valerio Signorelli)</p>
    </header>

    <main>
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <form id="profile-form">
            <div class="input-group">
              <input type="text" id="user-id-input" class="form-control form-control-lg" placeholder="Enter User ID" required>
              <button type="submit" class="btn btn-primary btn-lg">Fetch Profile</button>
            </div>
          </form>
        </div>
      </div>

      <div id="message-area" class="mt-4"></div>

    </main>
  </div>
<%- include('partials/footer') %>